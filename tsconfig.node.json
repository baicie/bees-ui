{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ESNext", "DOM"],
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2018",
    "types": ["node", "@testing-library/jest-dom", "vitest/globals"]
  },
  "include": [
    "vitest.workspace.mts",
    "internal",
    "eslint.config.mjs",
    "tests/**/*.ts",
    "typings/**/*.d.ts",
    "scripts/**/*.ts",
  ]
}
