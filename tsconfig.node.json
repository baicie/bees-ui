{
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "solid-js",

    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ESNext", "DOM"],
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "@testing-library/jest-dom", "vitest/globals"]
  },
  "include": [
    "vite.config.ts",
    "internal",
    "eslint.config.mjs",
    "playground/*/*.ts",
    "tests/**/*.ts",
    "packages/**/*.ts",
    "packages/**/*.tsx"
  ]
}
