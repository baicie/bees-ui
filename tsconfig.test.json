{
  "compilerOptions": {
    "composite": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "target": "es6",
    "lib": ["dom", "es2017", "es2022"],
    "skipLibCheck": true,
    "stripInternal": true,
    "resolvePackageJsonExports": true,

    "baseUrl": ".",
    "types": ["node", "@testing-library/jest-dom", "vitest/globals"]
  },
  "include": ["packages", "internal/sc-template", "internal/coms-template", "components"]
}
