{
  "compilerOptions": {
    "composite": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "target": "ES2018",
    "lib": ["dom", "es2017", "es2022"],
    "skipLibCheck": true,
    "stripInternal": true,
    "resolvePackageJsonExports": true,

    "baseUrl": ".",
    "types": ["node", "@testing-library/jest-dom", "vitest/globals"]
  },
  "include": [
    "packages",
    "components",
    "packages/**/*.test.ts",
    "packages/**/*.test.tsx",
    "components/**/*.test.ts",
    "components/**/*.test.tsx"
  ]
}
